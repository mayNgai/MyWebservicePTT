<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="3dp"
    android:layout_weight="3">
    <TextView
        android:id="@+id/txt_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="บาท/ลิตร"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingLeft="@dimen/padding_login"
        android:paddingRight="@dimen/padding_login"
        android:paddingBottom="@dimen/padding_login"
        android:gravity="center_vertical|right"
        android:layout_below="@+id/linear_head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_50"
                android:src="@drawable/blue_gasoline_95"/>
            <TextView
                android:id="@+id/txt_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_25"
                android:textColor="@color/colorPrimaryDark"
                android:text="Blue Gasoline 95"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:background="#000000"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_25"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="35.36"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>